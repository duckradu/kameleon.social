{
  "compilerOptions": {
    // Language and Environment
    "target": "ESNext",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",

    // Type Checking
    "strict": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      // "~/assets/*": ["./public/assets/*"],
      "~/*": ["./src/*"]
    },
    "types": ["vinxi/client", "unplugin-icons/types/solid"],

    // Emit
    "noEmit": true,

    // JavaScript Support
    "allowJs": true,

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  }
}
